@model ver2010.Models.JobPost

@{
    ViewData["Title"] = "Job Details";
}

<h1 class="mb-4">Job Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <!-- Job Image -->
        <div class="mb-4 text-center">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="Job Image" class="img-fluid" style="max-width: 200px;" />
            }
            else
            {
                <p>No Image Available</p>
            }
        </div>

        <!-- Job Details -->
        <dl class="row">
            <dt class="col-sm-3">Job Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.JobName)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Industry</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Industry)</dd>

            <dt class="col-sm-3">Required Skills</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RequireSkill)</dd>

            <dt class="col-sm-3">Salary</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>

            <dt class="col-sm-3">Employer</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployerId)</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
        </dl>
    </div>
</div>

<!-- Action Buttons -->
<div class="mb-4">
    @if (User.IsInRole("Employer"))
    {
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

<!-- Apply Button for Users -->
@if (User.IsInRole("User"))
{
    <div>
        <a asp-action="Create" asp-controller="Applications" asp-route-jobPostId="@Model.Id" class="btn btn-primary">
            Apply for Job
        </a>
    </div>
}
